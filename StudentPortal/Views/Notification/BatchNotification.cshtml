
@{
    ViewData["Title"] = "BatchNotification";
    Layout = "~/Views/Shared/_MainLayout/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">For Batch</h4>
                <form class="mt-4">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Title</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Title">
                    </div>
                    <div class="form-group">
                        <label>Message</label>
                        <textarea class="form-control" rows="5"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Select Message Type</label>
                        <select class="form-control custom-select">
                            <option value="" disabled="" selected="" hidden="">Select message type</option>
                            <option>Fee notice</option>
                            <option>Holiday notice</option>
                            <option>Exams notice</option>
                            <option>Events notice</option>
                            <option>Result notice</option>
                            <option>Time table notice</option>
                            <option>Entry test notice</option>
                            <option>Admission notice</option>
                            <option>Others</option>
                        </select>
                    </div>
                    <div class="custom-control custom-checkbox mr-sm-2 mb-3">
                        <input type="checkbox" class="custom-control-input" id="checkbox0" value="check">
                        <label class="custom-control-label" for="checkbox0">Is Important?</label>
                    </div>
                    <button type="submit" class="btn float-right btn-primary">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>
